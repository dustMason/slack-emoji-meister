{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "offline_enabled": false,
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "activeTab",
    "https://*.slack.com/*"
  ],
  "homepage_url": "https://takanakahiko.me/slack-emoji-meister/"
}
